<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
  <title>Node Auth</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body {padding-top:80px; word-wrap:break-word;}
  </style>
<body>
<div class="container">
  <div class="page-header text-center">
    <h1><span class = "fa fa-anchor"></span>Profile Page</h1>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </div>

  <div class="row">
    <!-- fitbit info -->
    <div class="col-sm-6">
      <div class="well">
        <h3 class = "text-info"><span class="fa fa-fitbit"></span> Fitbit</h3>
          <p>
            <strong>id</strong>: <%=user.fitbit.id%><br>
            <strong>token</strong>: <%=user.fitbit.token %><br>
            <strong>username</strong>: <%=user.fitbit.username%><br>
            <strong>displayName</strong>: <%=user.fitbit.displayName %>
          </p>
      </div>
    </div>
  </div>
</div>
</body>
</html>

